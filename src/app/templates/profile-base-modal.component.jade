mat-dialog-content
	.modal-content
		.modal-exit-btn((click)='closeModal()')
                
		.modal-avatar
			img.img-circle(src='{{ getAvatar(profileAuthor.id) }}', alt='...')
                                
		.modal-user-name {{ profileAuthor.name }}
                        
		.modal-user-info
			.modal-user-info-left
				span.description {{ dictionary.memberTime }}
				.nowrap {{ profileAuthor.memberTime }}
			.modal-user-info-center
				span.description {{ dictionary.lastLogTime }}
				.nowrap {{ profileAuthor.lastLogTime }}
			.modal-user-info-right
				span.description {{ dictionary.activityLevel }}
				.nowrap
					span.glyphicon.glyphicon-star
					span.glyphicon.glyphicon-star
					span.glyphicon.glyphicon-star-empty
                                        
		hr.modal-hr
                
		.modal-user-menu
			.modal-user-menu-left
				button.grey
					span.left-pointing-angle
			.modal-user-menu-name
				| {{ dictionary.modalTitles[0] }}
			.modal-user-menu-right
				button.blue
					span.right-pointing-angle
                                        
		.modal-profile-info
			.modal-profile-info-row
				.modal-profile-info-title
					span.nowrap.space {{ dictionary.modalTitles[1] }}
					span.nowrap {{ dictionary.modalTitles[2] }}
			.modal-profile-info-row
				.modal-profile-info-peers
					.modal-profile-info-peers-unrotate
						span.headler {{ profileAuthor.peers}}
						span.paragraph {{ dictionary.peers}}
				.modal-profile-info-dis
					.modal-profile-info-dis-unrotate
						span.headler {{ profileAuthor.discussions}}
						span.paragraph {{ dictionary.discussions}}
				.modal-profile-info-find
					.modal-profile-info-find-unrotate
						span.headler {{ profileAuthor.findings}}
						span.paragraph {{ dictionary.findings}}
				.modal-profile-info-q
					.modal-profile-info-q-unrotate
						span.headler {{ profileAuthor.questions}}
						span.paragraph {{ dictionary.questions}}
                                                
		.modal-other-profiles
			.modal-other-profiles-title
				span.nowrap.space {{ dictionary.modalTitles[3] }}
				span.nowrap {{ dictionary.modalTitles[4] }}
			.modal-other-profiles-row
				.modal-other-profiles-profile(*ngFor='let user of equalJoinTimeUsers; index as _i;')
					.modal-other-profiles-profile-ico
						img.img-circle-small(src='{{ getAvatar(user.id) }}', alt='...')
					.modal-other-profiles-profile-name
						| {{ user.name }}
                                                
		.modal-hottest-discussion
			.modal-hottest-discussion-title
				| {{ dictionary.modalTitles[5] }}
			.modal-hottest-discussion-row
				.modal-hottest-discussion-avatar
					img.img-circle-small(src='{{ getAvatar(hottestDiscussion.authorId) }}', alt='...')
				.modal-hottest-discussion-desc
					span {{ getUserName(hottestDiscussion.authorId) }} 
					span.description {{ dictionary.questionAuthorDescription[0] }}
					.title {{ hottestDiscussion.title }}
				.modal-hottest-discussion-info-row
					.modal-hottest-discussion-info
						span.modal-hottest-discussion-info-nr {{ hottestDiscussion.peersInvolved }}
						span {{ dictionary.peersInvolved }}
					.modal-hottest-discussion-info
						span.modal-hottest-discussion-info-nr {{ hottestDiscussion.relatedDiscussion }}
						span {{ dictionary.relatedDiscussion }}
					.modal-hottest-discussion-info
						span.modal-hottest-discussion-info-nr {{ hottestDiscussion.conversations }}
						span {{ dictionary.conversations }}
					.modal-hottest-discussion-info
						span.modal-hottest-discussion-info-nr {{ hottestDiscussion.upvotes }}
						span {{ dictionary.upVote }}
