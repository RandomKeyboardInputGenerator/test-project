md-dialog-content
	.modal-content
		.modal-exit-btn((click)='closeModal()') тип
		.modal-avatar
			h1
				span.glyphicon.glyphicon-user
		.modal-user-name
			h3 {{data}}
		.modal-user-info
			.modal-user-info-left
				span(style='color: grey;') {{ dic.memberTime }}
				.nowrap
					b {{ author.memberTime }}
			.modal-user-info-center
				span(style='color: grey;') {{ dic.lastLogTime }}
				.nowrap
					b {{ author.lastLogTime }}
			.modal-user-info-right
				span(style='color: grey;') {{ dic.activityLvl }}
				.nowrap
					span.glyphicon.glyphicon-star
					span.glyphicon.glyphicon-star
					span.glyphicon.glyphicon-star-empty
		hr.modal-hr
		.modal-user-menu
			.modal-user-menu-left
				button.grey
					span <
			.modal-user-menu-name
				| {{ dic.modalTitles[0] }}
			.modal-user-menu-right
				button.blue
					span >
		.modal-profile-info
			.modal-profile-info-row
				.modal-profile-info-title
					span.nowrap {{ dic.modalTitles[1] }}
					span.nowrap {{ dic.modalTitles[2] }}
			.modal-profile-info-row
				.modal-profile-info-peers
					.modal-profile-info-peers-unrotate
						h1 {{ author.peers}}
						p {{ dic.peers}}
				.modal-profile-info-dis
					.modal-profile-info-dis-unrotate
						h1 {{ author.discussions}}
						p {{ dic.discussions}}
				.modal-profile-info-find
					.modal-profile-info-find-unrotate
						h1 {{ author.findings}}
						p {{ dic.findings}}
				.modal-profile-info-q
					.modal-profile-info-q-unrotate
						h1 {{ author.questions}}
						p {{ dic.questions}}
		.modal-other-profiles
			.modal-other-profiles-title
				span.nowrap {{ dic.modalTitles[3] }}
				span.nowrap {{ dic.modalTitles[4] }}
			.modal-other-profiles-row
				.modal-other-profiles-profile
					.modal-other-profiles-profile-ico
						h1
							span.glyphicon.glyphicon-user
					.modal-other-profiles-profile-name
						| {{ author.otherAutorsStatic[0] }}
				.modal-other-profiles-profile
					.modal-other-profiles-profile-ico
						h1
							span.glyphicon.glyphicon-user
					.modal-other-profiles-profile-name
						| {{ author.otherAutorsStatic[1] }}
				.modal-other-profiles-profile
					.modal-other-profiles-profile-ico
						h1
							span.glyphicon.glyphicon-user
					.modal-other-profiles-profile-name
						| {{ author.otherAutorsStatic[2] }}
		.modal-hottest-discussion
			.modal-hottest-discussion-title
				| {{ dic.modalTitles[5] }}
			.modal-hottest-discussion-row
				.modal-hottest-discussion-avatar
					h1
						span.glyphicon.glyphicon-user
				.modal-hottest-discussion-desc
					p
						| {{ staticFinding.author }} 
						span(style='color: grey; font-style: normal; font-weight: normal;') {{ staticFinding.desc }}
					h4 {{ staticFinding.title }}
				.modal-hottest-discussion-info-row
					.modal-hottest-discussion-info
						span.modal-hottest-discussion-info-nr {{ staticFinding.peerInv }}
						span {{ dic.peerInv }}
					.modal-hottest-discussion-info
						span.modal-hottest-discussion-info-nr {{ staticFinding.relDis }}
						span {{ dic.relDis }}
					.modal-hottest-discussion-info
						span.modal-hottest-discussion-info-nr {{ staticFinding.conv }}
						span {{ dic.conv }}
					.modal-hottest-discussion-info
						span.modal-hottest-discussion-info-nr {{ staticFinding.upvotes }}
						span {{ dic.upVote }}
